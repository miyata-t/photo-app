<h1>ログイン</h1>
<% if @errors.present? %>
  <div class="error-display">
    <% @errors.each do |error| %>
      <li class="error-msg" style="color:red;"><%= error %>
    <% end %>
  </div>
<% end %>

<div class="login">
  <%= form_with url:login_path, local: true do |form| %>
    <%= form.label :name, "ユーザーID" %> <%= form.text_field :name %><br>
    <%= form.label :password, "パスワード" %> <%= form.password_field :password %><br>
    <%= form.submit "ログイン" %>
  <% end %>
</div>